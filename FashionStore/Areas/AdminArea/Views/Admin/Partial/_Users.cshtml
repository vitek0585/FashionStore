@model IEnumerable<Role>
@{
    Layout = null;
    var roles = Html.SerializeToJson(Model);
}<div style="position: relative" ng-init="uVm.roles = @roles">
    <table class="table table-striped">
        <col width="10%"></col>
        <col width="20%"></col>
        <col width="20%"></col>
        <col width="10%"></col>
        <col width="20%"></col>
        <tr>
            <th>Id</th>
            <th>User name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
        <tr ng-repeat="user in uVm.users track by $index">
            <td>{{user.id}}</td>
            <td>{{user.userName}}</td>
            <td>{{user.phoneNumber}}</td>
            <td>{{user.email}}</td>
            <td>
                <div>
                    <div az-suggest-box sb-list="uVm.roles"
                         sb-select-items-by-list="user.roles"
                         sb-model-selected="user.roles"
                         sb-key-id="id"
                         class="suggest-box">
                        <div class="select">
                            <div class="input" sb-trigger-area>
                                <div sb-selection-item class="selection-item">
                                    {{s.name}}&nbsp;<span sb-remove-item-from-selection class="rem-btn"><i class="fa fa-times"></i></span>
                                </div>
                               
                            </div>
                            <button sb-trigger-area><i class="fa fa-chevron-down"></i></button>
                        </div>
                        <ul class="dropdown">
                            <li sb-dropdown-item class="item">{{i.name}}</li>
                        </ul>
                    </div>
                    
                </div>
            </td>
            <td>
                <button class="btn btn-info btn-sm" ng-click="uVm.save(user);">Save</button>
                <button class="btn btn-danger btn-sm" ng-click="uVm.remove(user.id);">Remove</button>
            </td>
        </tr>
    </table>

    <div paging-setup click-page="uVm.clickPage" info="uVm.info" ng-if="uVm.users[0]" class="paging"></div>



</div>


